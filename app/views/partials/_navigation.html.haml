%nav.flex.items-center.justify-between.flex-wrap.bg-gradient-blue-to-purple.p-6
  .flex.items-center.flex-no-shrink.text-white.mr-6
    %logo.max-w-xs
      =link_to image_tag('earlybird_logo.png'), root_path
    %span.font-semibold.text-2xl.tracking-tight EarlyBird News
  .block.lg:hidden
    %button.flex.items-center.px-3.py-2.border.rounded.text-teal-lighter.border-teal-light.hover:text-white.hover:border-white
      %svg.fill-current.h-3.w-3{viewbox: "0 0 20 20", xmlns: "http://www.w3.org/2000/svg"}
        %title Menu
        %path{:d => "M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"}  
  .w-full.block.flex-grow.lg:flex.lg:items-center.lg:w-auto.mr-20
    - unless @categories.nil? 
      .text-sm.lg:flex-grow
      - @categories.each do |category|  
        %a.navitem.mr-4{href: "#responsive-header"}
          = link_to category.name.humanize, root_path(category: category.id), class: "inline-block text-lg px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-purple hover:bg-white mt-4 lg:mt-0"
  .w-full.lg:items-center.lg:w-auto   
    - if user_signed_in?
      = link_to "Logout", destroy_user_session_path, method: :delete, class: "inline-block text-lg px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-purple hover:bg-white mt-4 lg:mt-0"
    - else
      = link_to "Login", new_user_session_path, class: "inline-block text-lg px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-purple hover:bg-white mt-4 lg:mt-0"
    = link_to "Get Premium", new_subscription_path, class: "inline-block text-lg px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-purple hover:bg-white mt-4 lg:mt-0"